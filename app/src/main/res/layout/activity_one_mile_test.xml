<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:id="@+id/layout_one_mile_test">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15">

            <TextView
                android:text="NovelT"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_time_mile_test"
                android:textColor="@color/white"
                android:text="2019. 02. 12. PM 2:12"
                android:textSize="30sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:background="@drawable/background_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="ID :"
                        android:textColor="#bebebe"
                        android:textSize="25sp"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_userid_mile_test"
                        android:text="jaehyeok"
                        android:textSize="27sp"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="BAND :"
                        android:textColor="#bebebe"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_patch_mile_test"
                        android:text="9150"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/indicator_connection_mile_test"
                        android:src="@drawable/img_connect"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-5dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/indicator_battery_mile_test"
                        android:src="@drawable/battery_indicator_50p"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="-68dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                </LinearLayout>

                <TextView
                    android:text="Protocol :"
                    android:textColor="#bebebe"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="개인맞춤 체력검사"
                    android:textColor="@color/white"
                    android:textSize="33sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_out"
                    android:text="나가기"
                    android:textColor="#bebebe"
                    android:textSize="20sp"
                    android:background="@drawable/btn_out"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_content_mile_test">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ProgressBar
                            android:id="@+id/mile_test_progressbar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:layout_centerInParent="true"
                            android:progressDrawable="@drawable/circular_progress"
                            android:secondaryProgress="100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="Distance"
                            android:textColor="#bebebe"
                            android:textSize="25sp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_progress"
                            android:textColor="@color/white"
                            android:text="0 km"
                            android:textSize="25sp"
                            android:layout_alignLeft="@id/mile_test_progressbar"
                            android:layout_alignRight="@id/mile_test_progressbar"
                            android:layout_alignTop="@id/mile_test_progressbar"
                            android:layout_alignBottom="@id/mile_test_progressbar"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text="Heart Rate"
                        android:textColor="#bebebe"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_heart_rate_miletest"
                        android:background="@drawable/background_textview"
                        android:text="0 bpm"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Time"
                        android:textColor="#bebebe"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_time_miletest"
                        android:background="@drawable/background_textview"
                        android:text="00:00"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text="Speed (km/h)"
                        android:textColor="#bebebe"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_speed_miletest"
                        android:background="@drawable/background_textview"
                        android:text="0 km/h"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Calorie"
                        android:textColor="#bebebe"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_calorie_miletest"
                        android:background="@drawable/background_textview"
                        android:text="0 kcal"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_hr_graph">

            <TextView
                android:text="Heart Rate Graph (bpm)"
                android:textColor="#bebebe"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <com.exam.novelt3_1.OneMile_HRZoneGraph
                    android:id="@+id/HRGraph_mile_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_ready_to_start"
        android:src="@drawable/img_ready_to_start"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_ready_to_stop"
        android:src="@drawable/img_ready_to_stop"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_notice_warmingup"
        android:background="@drawable/background_notice"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_notice_hr"
        android:background="@drawable/background_notice"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Copyright 2019. Hanyang Digitech all rights reserved."
        android:textColor="#ffff00"
        android:textSize="13sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>